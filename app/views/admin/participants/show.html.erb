<%- model_class = Participant -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>



<div class="row">
    <div class="col-md-4"><%= user_image(@participant_info) %>
      <b><%= @participant_info['fullName'] %></b>
    </div>
    <div class="col-md-8">


      <table class="table table-bordered">
        <tbody>
            
            <tr><td><b><%= model_class.human_attribute_name(:login) %></b></td><td><%= @participant.login %></td></tr>
            <tr>
              <tr><td><b><%= model_class.human_attribute_name(:student_id) %></b></td><td><%= @participant_info['studentId'] %></td></tr>
            <tr>
              <td><b><%= model_class.human_attribute_name(:full_name) %></b></td><td><%= @participant_info['fullName'] %></td>
            </tr>
            <tr>
              <td><b><%= model_class.human_attribute_name(:email) %></b></td><td><%= @participant_info['email'] %></td>
            </tr>
            <tr>
              <td><b><%= model_class.human_attribute_name(:study) %></b></td><td><%= @participant_info['branch'] %> <%= @participant_info['level'] %> <%= @participant_info['speciality'] %></td>
            </tr>
            <tr>
                <td>Inscription</td>
                <td>
                  <% if @participant.paid %>
                    <span class="label label-success">PAYÃ‰</span>
                  <% else %>
                    <span class="label label-warning">EN ATTENTE</span>
                  <% end %>
              </td>
            </tr>
        </tbody>
      </table>



    </div>

</div>



<%= link_to t('.back', :default => t("helpers.links.back")),
              participants_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_participant_path(@participant), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              participant_path(@participant),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
